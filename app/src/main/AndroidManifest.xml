<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.questionsandanswerschat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Contact"></activity>
        <activity android:name=".PaymentDetails" />
        <activity android:name=".Game.GameOver" />
        <activity android:name=".Game.InGame" />
        <activity android:name=".Game.Play" />
        <activity android:name=".Donations" />
        <activity
            android:name=".PasswordReset"
            android:parentActivityName=".Login" />
        <activity android:name=".Chat.ConversationPage" />
        <activity android:name=".Chat.ChatSection" />
        <activity android:name=".Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Register" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>