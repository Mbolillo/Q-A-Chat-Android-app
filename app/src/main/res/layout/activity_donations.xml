<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"/>


            <TextView
                android:id="@+id/fetchedName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="@string/et_username"
                android:textColor="@color/White"
                android:textStyle="bold" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="120dp"
        android:text="We really appreciate you are enjoying the app!!"
        android:textSize="25sp"
        android:textColor="@color/White"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="230dp"
        android:text="With your help, we will grow our Community by implementing new features
so users will have a better experience."
        android:textSize="25sp"
        android:textColor="@color/White"
        android:textStyle="italic"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/donateAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Amount to Donate in â‚¬ through PayPal"
        android:layout_marginTop="400dp"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/btnDonate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/donateAmount"
        android:layout_centerHorizontal="true"
        android:text="Donate"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textStyle="bold"/>

</RelativeLayout>